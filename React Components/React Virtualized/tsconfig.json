{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "jsx": "react",
        "baseUrl": "../",
        "typeRoots": ["../"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "types": [],
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "target": "es5"
    },
    "include": [
        "./src/**/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}